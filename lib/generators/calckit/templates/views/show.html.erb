<div class="min-h-full">
  <div class="py-10">
    <main>
      <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <h1 class="text-2xl font-bold mb-6"><%%= @calculator_class.calculator_name %></h1>

        <div class="rounded-2xl border border-gray-200 bg-white p-6 shadow-sm dark:bg-zinc-900 dark:border-zinc-700">
          <%%= render "form", calculator: @calculator %>
        </div>

        <%%= render "result", calculator: @calculator, result: @result %>

        <%% if defined?(@saved_calculations) && @saved_calculations&.any? %>
          <%%= render "saved_calculations", saved_calculations: @saved_calculations %>
        <%% end %>
      </div>
    </main>
  </div>
</div>
