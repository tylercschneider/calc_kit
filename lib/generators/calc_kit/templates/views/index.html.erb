<div class="min-h-full">
  <div class="py-10">
    <main>
      <div class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        <h1 class="text-2xl font-bold mb-6">Calculators</h1>

        <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
          <%% CalcKit.all.each do |calculator_class| %>
            <%%= link_to calculator_path(slug: calculator_class.calculator_slug),
                  class: "block rounded-2xl border border-gray-200 bg-white p-6 shadow-sm hover:shadow-md transition dark:bg-zinc-900 dark:border-zinc-700" do %>
              <h2 class="text-lg font-semibold"><%%= calculator_class.calculator_name %></h2>
            <%% end %>
          <%% end %>
        </div>
      </div>
    </main>
  </div>
</div>
